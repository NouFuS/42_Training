corrections=Corrections/
alumni=../Lucie/

CC=gcc
CFLAGS=-Wextra -Werror -Wall

compile_and_run_c00ex00: ${corrections}ex00/ft_putchar.c ${alumni}ex00/ft_putchar.c
	${CC} $^ -o ${corrections}ex00/main ${corrections}ex00/main.c ${CFLAGS}
	./${corrections}ex00/main

compile_and_run_c00ex01: ${corrections}ex01/ft_print_alphabet.c ${alumni}ex01/ft_print_alphabet.c
	${CC} $^ -o ${corrections}ex01/main ${corrections}ex01/main.c ${CFLAGS}
	./${corrections}ex01/main

compile_and_run_c00ex02: ${corrections}ex02/ft_print_reverse_alphabet.c ${alumni}ex02/ft_print_reverse_alphabet.c
	${CC} $^ -o ${corrections}ex02/main ${corrections}ex02/main.c ${CFLAGS}
	./${corrections}ex02/main

compile_and_run_c00ex03: ${corrections}ex03/correction.c ${alumni}ex03/ft_print_numbers.c
	${CC} $^ -o ${corrections}ex03/main ${corrections}ex03/main.c ${CFLAGS}
	./${corrections}ex03/main

compile_and_run_c00ex04: ${corrections}ex04/correction.c ${alumni}ex04/ft_is_negative.c
	${CC} $^ -o ${corrections}ex04/main ${corrections}ex04/main.c ${CFLAGS}
	./${corrections}ex04/main